<div class="continer">
    <div class="row">
    <div class="col-lg-10">
    <div class="alert alert-secondty text-center">
        <h1>ALL PRODUCTS</h1>
    </div>

    <table class="table table-bordered">
        <thead class="bg-dark">
           <tr class="text-white text-center">
               {{!-- <th>Id</th> --}}
               <th>title</th>
               <th>description</th>
               <th>status</th>
               <th>image</th>
               <th>comments Allowed</th>
               <th>category</th>
               <th>Actions</th>
           </tr>
        </thead>
        <tbody class="text-center ">
            {{#each posts}}
            <tr>
                {{!-- <td>{{_id}}</td> --}}
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{status}}</td>
                <td>{{file}}</td>
                <td>{{allowComments}}</td>
                <td>{{category.title}}</td>
                <td class="d-flex">
                    <form action="/admin/posts/approve" method="post" enctype="multipart/form-data">
                        <input type="hidden" value="{{title}}" class="form-control"  name="title" id="title" placeholder="enter the title"> 
                        {{!-- <input type="hidden" value="{{user}}"  class="form-control" name="user"> --}}
                        <input type="hidden" value="{{file}}" class="form-control" name="file" id="file" placeholder="upload_image">
                        <input type="hidden" value="{{price}}" class="form-control" name="price" id="price" placeholder="price">
                        <input type="hidden" value="{{allowComments}}" class="form-check-input" id="allowComments" name="allowComments">
                        <input type="hidden" value="{{description}}" name="description">
                        <button class="btn btn-sm btn-success" type="submit">Approve</button>
                    </form>
                    <form action="/admin/posts/delete/{{id}}?newMethod=DELETE" method="post">
                        <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>    
</div>
</div>



