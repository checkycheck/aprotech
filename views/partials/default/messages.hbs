{{#if success_message}}


<div class="alert alert-success mt-2 auto-hide" role="alert">
    <strong>{{success_message}}</strong>

    <button type="button" class="close" data-dismiss="alert" aria-label="close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

{{#if error_message}}


<div class="alert alert-danger mt-2 auto-hide" role="alert">
    <strong>{{error_message}}</strong>

    <button type="button" class="close" data-dismiss="alert" aria-label="close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}