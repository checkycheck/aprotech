<div class="container">
	<div class="row">
		<div class="col-lg-6 m-4 shadow-lg">
					
						<form action="/editprofile/{{profile._id}}?newMethod=PUT" method="POST">
				<h1>COMPLETE YOUR PROFILE</h1>


				<div class="form-group m-2">
					<label for="">ACCOUNT NAME</label>
					<input type="text" name="accountName"  class="form-control" id="accountName" value={{profile.accountName}} placeholder="enter account name" required>
				</div>

				<div class="form-group m-2">
					<label for="">ACCOUNT NUMBER</label>
					<input type="number" name="accountNumber"  class="form-control" id="accountNumber" value={{profile.accountNumber}} placeholder="enter your account number" required>
				</div>

				<div class="form-group m-2">
					<label for="">BANK NAME</label>
					<input type="text" name="bank"  class="form-control" id="bank" value={{profile.bank}} placeholder="enter your bank name" required>
				</div>

				<input type="hidden" value="{{user._id}}" name="user" id="user">

				<button type="submit" class="form-group m-3">
					Edit
				</button>
			</form>
	
		</div>

		<div class="col-lg-5">
			
		</div>
	</div>
</div>